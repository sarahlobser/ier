<div class="row">

    <div class="col-md-3">
        <p class="lead">BUY OUR STUFF</p>
        <div class="list-group">
            <a href="/products/category/skydiving" class="list-group-item">Skydiving</a>
            <a href="/products/category/mountaineering" class="list-group-item">Mountaineering</a>
            <a href="/products/category/heli-skiing" class="list-group-item">Heli-Skiing</a>
            <a href="/products/category/diving" class="list-group-item">Diving</a>
            <a href="/products/category/downhill biking" class="list-group-item">Downhill Biking</a>
        </div>
    </div>

    <div class="col-md-9">

        <div class="thumbnail">
            <img class="img-responsive" src="/images/{{product.name}}.jpg" style="width:800px;height:300px" alt="">
            <div class="caption-full">
                <h4 class="pull-right">${{product.price}}</h4>
                <h4><a href="#">{{product.name}}</a>
                        </h4>
                <p>{{product.description}}</p>
            </div>
            <div class="ratings">
                {{#if product.quantity}}
                <a class="btn btn-success pull-left" href="/products/cart/{{product.id}}">Add To Cart</a>
                <p class="pull-right">Quantity Remaining: {{product.quantity}}</p>
                {{else}}
                <h4>SOLD OUT</h4> {{/if}}
                <p>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star-empty"></span> 4.0 stars
                </p>
            </div>
        </div>

    </div>

</div>

<!-- /.container -->

<div class="container">

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; IER 2014</p>
            </div>
        </div>
    </footer>

</div>

<!-- /.container -->

