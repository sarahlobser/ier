<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <!--                <div class="col-md-8 col-md-offset-2">-->
                <h1 class="brand-heading">Edit Profile</h1>
                <div class="col-md-3">
                    <form action="/users/update/{{profile.email}}" method="POST">
                        <p>First Name:
                            <input type="text" name="first_name" placeholder="{{profile.first_name}}">
                        </p>
                        <p>Last Name:
                            <input type="text" name="last_name" placeholder="{{profile.last_name}}">
                        </p>
                        <p>Email:
                            <input type="text" name="email" value="{{profile.email}}" readonly>
                        </p>
                        <p>Password:
                            <input type="password" name="password" required>
                        </p>

                
                <button type="submit" id="editProfileButton">SUBMIT</button>
                </form>
                    </div>
                <i class="fa fa-angle-double-down animated"></i>
                <!--               </div>-->
            </div>
        </div>
    </div>
</header>